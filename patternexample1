package automaction;

public class patternexample1 {
			
	            public static void main(String[] args) {
		          int i,j,k;
		          for(i=20;i>0;i--)
		          {
		        	  for(k=0;k<20-i;k++)
		        	  {
		        	      System.out.print("  ");
		        	  }
		        	  for(j=1;j<=i;j++)
		        	  {
		        		  System.out.print(" * ");
		        	  }
		        	  System.out.println();
		          }
	    }
}
