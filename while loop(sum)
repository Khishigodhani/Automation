package automaction;

import java.util.Scanner;

public class WhileLoop {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n,sum=0;
		System.out.println("Enetr N : ");
        n=sc.nextInt();
        while(n>0)
        {
        	sum=sum+n;
        	n--;
        }
        System.out.println("SUm : "+sum);
	}
}
